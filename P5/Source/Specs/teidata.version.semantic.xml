<?xml-model href="https://jenkins.tei-c.org/job/TEIP5-dev/lastSuccessfulBuild/artifact/P5/release/xml/tei/odd/p5.nvdl" type="application/xml" schematypens="http://purl.oclc.org/dsdl/nvdl/ns/structure/1.0"?>
<dataSpec xmlns="http://www.tei-c.org/ns/1.0" module="tei" ident="teidata.version.semantic">
  <desc versionDate="2024-05-21" xml:lang="en">defines the range of values which may be used as a semantic version number per <ptr target="#BIB_semVer"/>.</desc>
  <content>
    <!-- The regular expression for the restriction below is taken
         from Peter Stadler’s posts to https://github.com/TEIC/TEI/issues/1993. -->
    <dataRef name="token" restriction="(0|[1-9]\d*)\.(0|[1-9]\d*)\.(0|[1-9]\d*)(-((0|[1-9]\d*|\d*[\-a-zA-Z][\-0-9a-zA-Z]*)(\.(0|[1-9]\d*|\d*[\-a-zA-Z][\-0-9a-zA-Z]*))*))?(\+([\-0-9a-zA-Z]+(\.[\-0-9a-zA-Z]+)*))?"/>
  </content>
  <remarks versionDate="2012-06-17" xml:lang="en">
    <p>Values of this datatype should follow the rules established by
    the <ref target="#BIB_semVer">Semantic Versioning</ref>
    specification, version 2.0.0.</p>
  </remarks>
</dataSpec>
